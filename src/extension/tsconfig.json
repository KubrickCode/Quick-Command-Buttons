{
  "compilerOptions": {
    "baseUrl": "..",
    "lib": ["ES2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./out",
    "paths": {
      "*": ["extension/node_modules/*", "node_modules/*"]
    },
    "rootDir": "..",
    "sourceMap": true,
    "target": "ES2020",
    "types": ["node", "jest", "vscode"]
  },
  "exclude": ["node_modules", ".vscode-test", "coverage"],
  "extends": "../../tsconfig.base.json",
  "include": [
    "../extension/**/*",
    "../internal/**/*",
    "../pkg/**/*",
    "../shared/**/*",
    "../tests/**/*"
  ]
}
