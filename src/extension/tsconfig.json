{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./out",
    "rootDir": "..",
    "lib": ["ES2020", "dom"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "jest", "vscode"],
    "baseUrl": "..",
    "paths": {
      "*": ["extension/node_modules/*", "node_modules/*"]
    }
  },
  "include": [
    "../extension/**/*",
    "../internal/**/*",
    "../pkg/**/*",
    "../shared/**/*",
    "../tests/**/*"
  ],
  "exclude": ["node_modules", ".vscode-test", "coverage"]
}
