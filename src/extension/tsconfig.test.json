{
  "compilerOptions": {
    "baseUrl": "..",
    "lib": ["ES2020", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "*": ["extension/node_modules/*", "../node_modules/*"]
    },
    "rootDir": "..",
    "sourceMap": true,
    "target": "ES2020",
    "typeRoots": ["../../node_modules/@types", "../../node_modules"],
    "types": ["node", "vitest/globals", "vscode"]
  },
  "extends": "../../tsconfig.base.json",
  "include": [
    "../vitest.d.ts",
    "../extension/**/*.spec.ts",
    "../internal/**/*.spec.ts",
    "../pkg/**/*.spec.ts",
    "../shared/**/*.spec.ts"
  ]
}
