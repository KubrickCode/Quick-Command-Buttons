{
  "name": "quick-command-buttons",
  "displayName": "Quick Command Buttons",
  "icon": "public/logo.png",
  "description": "Add customizable buttons to quickly execute commands in VS Code",
  "version": "0.5.0",
  "publisher": "KubrickCode",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KubrickCode/quick-command-buttons.git"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "commands",
    "buttons",
    "quick",
    "shortcuts",
    "productivity",
    "status bar",
    "workflow",
    "automation",
    "developer tools",
    "command palette"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "quickCommandButtons.refresh",
        "title": "%command.refresh%",
        "icon": "$(refresh)"
      },
      {
        "command": "quickCommandButtons.refreshTree",
        "title": "%command.refreshTree%"
      },
      {
        "command": "quickCommandButtons.executeFromTree",
        "title": "%command.executeFromTree%"
      },
      {
        "command": "quickCommandButtons.showAllCommands",
        "title": "%command.showAllCommands%",
        "category": "%category.quickCommands%"
      },
      {
        "command": "quickCommandButtons.openConfig",
        "title": "%command.openConfig%",
        "category": "%category.quickCommands%",
        "icon": "$(gear)"
      },
      {
        "command": "quickCommandButtons.toggleConfigurationTarget",
        "title": "%command.toggleConfigurationTarget%",
        "category": "%category.quickCommands%"
      },
      {
        "command": "quickCommandButtons.exportConfiguration",
        "title": "%command.exportConfiguration%",
        "category": "%category.quickCommands%",
        "icon": "$(export)"
      },
      {
        "command": "quickCommandButtons.importConfiguration",
        "title": "%command.importConfiguration%",
        "category": "%category.quickCommands%",
        "icon": "$(import)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "quickCommandsContainer",
          "title": "%viewsContainer.title%",
          "icon": "$(zap)"
        }
      ]
    },
    "views": {
      "quickCommandsContainer": [
        {
          "id": "quickCommandsTree",
          "name": "%view.commands%"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "quickCommandButtons.refreshTree",
          "when": "view == quickCommandsTree",
          "group": "navigation"
        },
        {
          "command": "quickCommandButtons.openConfig",
          "when": "view == quickCommandsTree",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "quickCommandButtons.showAllCommands",
        "key": "ctrl+shift+;",
        "mac": "cmd+shift+;"
      }
    ],
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "quickCommandButtons.refreshButton": {
          "type": "object",
          "default": {
            "icon": "$(refresh)",
            "color": "#00BCD4",
            "enabled": true
          },
          "description": "%config.refreshButton.description%",
          "properties": {
            "icon": {
              "type": "string",
              "default": "$(refresh)",
              "description": "%config.refreshButton.icon.description%"
            },
            "color": {
              "type": "string",
              "default": "#00BCD4",
              "description": "%config.refreshButton.color.description%"
            },
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "%config.refreshButton.enabled.description%"
            }
          }
        },
        "quickCommandButtons.configurationTarget": {
          "type": "string",
          "enum": [
            "local",
            "workspace",
            "global"
          ],
          "default": "workspace",
          "description": "%config.configurationTarget.description%",
          "enumDescriptions": [
            "%config.configurationTarget.local%",
            "%config.configurationTarget.workspace%",
            "%config.configurationTarget.global%"
          ]
        },
        "quickCommandButtons.buttons": {
          "type": "array",
          "default": [
            {
              "name": "$(testing-passed-icon) Test",
              "command": "npm test",
              "color": "#4CAF50",
              "shortcut": "t",
              "terminalName": "Test Runner"
            },
            {
              "name": "$(terminal) Terminal",
              "command": "workbench.action.terminal.new",
              "useVsCodeApi": true,
              "color": "#00BCD4",
              "shortcut": "n"
            },
            {
              "name": "$(git-branch) Git",
              "color": "#FF9800",
              "shortcut": "g",
              "group": [
                {
                  "name": "$(arrow-down) Pull",
                  "command": "git pull",
                  "shortcut": "l"
                },
                {
                  "name": "$(arrow-up) Push",
                  "command": "git push",
                  "shortcut": "p"
                },
                {
                  "name": "$(search) Check Status",
                  "shortcut": "c",
                  "group": [
                    {
                      "name": "$(git-commit) Status",
                      "command": "git status",
                      "shortcut": "s"
                    },
                    {
                      "name": "$(diff) Diff",
                      "command": "git diff",
                      "shortcut": "d"
                    },
                    {
                      "name": "$(history) Log",
                      "command": "git log --oneline -5",
                      "shortcut": "l"
                    }
                  ]
                }
              ]
            }
          ],
          "description": "%config.buttons.description%",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "%config.buttons.name.description%"
              },
              "command": {
                "type": "string",
                "description": "%config.buttons.command.description%"
              },
              "useVsCodeApi": {
                "type": "boolean",
                "default": false,
                "description": "%config.buttons.useVsCodeApi.description%"
              },
              "color": {
                "type": "string",
                "description": "%config.buttons.color.description%"
              },
              "shortcut": {
                "type": "string",
                "description": "%config.buttons.shortcut.description%"
              },
              "terminalName": {
                "type": "string",
                "description": "%config.buttons.terminalName.description%"
              },
              "executeAll": {
                "type": "boolean",
                "default": false,
                "description": "%config.buttons.executeAll.description%"
              },
              "group": {
                "type": "array",
                "description": "%config.buttons.group.description%",
                "items": {
                  "$ref": "#/properties/quickCommandButtons.buttons/items"
                }
              },
              "insertOnly": {
                "type": "boolean",
                "default": false,
                "description": "%config.buttons.insertOnly.description%"
              }
            },
            "required": [
              "name"
            ],
            "oneOf": [
              {
                "required": [
                  "command"
                ],
                "not": {
                  "required": [
                    "group"
                  ]
                }
              },
              {
                "required": [
                  "group"
                ],
                "not": {
                  "required": [
                    "command"
                  ]
                }
              }
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "build": "pnpm build:view && pnpm build:extension",
    "build:extension": "node esbuild.config.mjs --production",
    "build:extension:dev": "node esbuild.config.mjs",
    "build:extension:watch": "node esbuild.config.mjs --watch",
    "build:view": "cd src/view && pnpm build",
    "compile": "cd src/extension && tsc -p ./",
    "dev": "cd src/view && pnpm dev",
    "install-package": "code --install-extension quick-command-buttons-$npm_package_version.vsix",
    "lint": "pnpm lint:format && pnpm lint:extension && pnpm lint:view",
    "lint:config": "npx prettier --write \"**/*.{json,yml,yaml,md}\"",
    "lint:extension": "cd src && npx eslint --fix extension/main.ts internal pkg shared",
    "lint:format": "npx prettier --write \"src/{extension,internal,pkg,shared}/**/*.ts\" \"src/view/src/**/*.{ts,tsx}\" \"**/*.{json,yml,yaml,md}\"",
    "lint:view": "cd src/view && npx eslint --fix src/**/*.{ts,tsx}",
    "ovsx-publish": "ovsx publish --no-dependencies",
    "package": "pnpm build && vsce package --no-dependencies --allow-star-activation && find . -maxdepth 1 -name '*.vsix' ! -name '*'$npm_package_version'.vsix' -delete",
    "prepare": "husky",
    "preview": "cd src/view && pnpm preview",
    "test": "cd src/extension && jest",
    "test:ci": "cd src/extension && jest --ci --coverage --watchAll=false",
    "test:coverage": "cd src/extension && jest --coverage",
    "test:watch": "cd src/extension && jest --watch",
    "test:e2e-ui": "cd src/view && pnpm test:e2e-ui",
    "test:e2e-ui:report": "cd src/view && pnpm test:e2e-ui:report",
    "vsce-publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@eslint/js": "9.17.0",
    "@jest/globals": "30.1.2",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.0",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "11.0.1",
    "@semantic-release/npm": "13.1.2",
    "@semantic-release/release-notes-generator": "14.0.1",
    "@types/jest": "30.0.0",
    "@types/node": "24.3.0",
    "@types/vscode": "1.90.0",
    "@vscode/vsce": "3.6.2",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "esbuild": "0.27.0",
    "eslint": "9.37.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-perfectionist": "4.15.1",
    "globals": "16.3.0",
    "husky": "9.1.7",
    "jest": "30.1.3",
    "lint-staged": "15.2.11",
    "ovsx": "0.10.6",
    "prettier": "3.6.2",
    "semantic-release": "24.2.0",
    "ts-jest": "29.4.1",
    "typescript": "5.8.3",
    "typescript-eslint": "8.46.0"
  },
  "dependencies": {
    "es-toolkit": "1.42.0",
    "zod": "3.22.4"
  }
}
