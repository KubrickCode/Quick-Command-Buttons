{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["compile"],
      "label": "pnpm: compile",
      "problemMatcher": "$tsc"
    },
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["build:extension:dev"],
      "label": "tsup: build extension",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["build:extension:watch"],
      "label": "tsup: watch extension",
      "isBackground": true,
      "problemMatcher": {
        "owner": "tsup",
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Build start",
          "endsPattern": "Build success"
        }
      }
    },
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["build:watch"],
      "label": "vite: watch",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/src/view"
      },
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "building for production",
          "endsPattern": "built in"
        }
      }
    },
    {
      "label": "compile + watch",
      "dependsOn": ["tsup: watch extension", "vite: watch"],
      "problemMatcher": []
    }
  ]
}
