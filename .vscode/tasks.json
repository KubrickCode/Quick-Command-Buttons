{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["compile"],
      "label": "pnpm: compile",
      "problemMatcher": "$tsc"
    },
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["build:extension:dev"],
      "label": "esbuild: build extension",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["build:extension:watch"],
      "label": "esbuild: watch extension",
      "isBackground": true,
      "problemMatcher": {
        "owner": "esbuild",
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Watching for changes",
          "endsPattern": "(complete|Watching for changes)"
        }
      }
    },
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["build:watch"],
      "label": "vite: watch",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/src/view"
      },
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "building for production",
          "endsPattern": "built in"
        }
      }
    },
    {
      "label": "compile + watch",
      "dependsOn": ["esbuild: watch extension", "vite: watch"],
      "problemMatcher": []
    }
  ]
}
