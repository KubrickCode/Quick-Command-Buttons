{
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "files.insertFinalNewline": true,
  "files.autoSave": "onFocusChange",
  "quickCommandButtons.buttons": [
    {
      "color": "green",
      "name": "$(git-branch) Git",
      "shortcut": "g",
      "group": [
        {
          "command": "git add . && git commit --amend --no-edit && git push -f",
          "name": "Push",
          "shortcut": "p",
          "terminalName": "Forced Push"
        },
        {
          "command": "git pull",
          "name": "Pull",
          "shortcut": "l",
          "terminalName": "Pull"
        },
        {
          "command": "git add . && git commit --amend --no-edit",
          "name": "Commit",
          "shortcut": "c",
          "terminalName": "Add and Commit Amend"
        },
        {
          "command": "git reset --soft HEAD~1",
          "name": "Reset Soft",
          "shortcut": "r",
          "terminalName": "Reset Soft"
        },
        {
          "command": "git rebase -i HEAD~5",
          "name": "Rebase 5",
          "shortcut": "b",
          "terminalName": "Rebase Interactive 5"
        },
        {
          "command": "git checkout main",
          "name": "Checkout main",
          "shortcut": "m",
          "terminalName": "Checkout main"
        }
      ]
    },
    {
      "color": "orange",
      "command": "just package && just install-package",
      "name": "$(package) Package",
      "shortcut": "i",
      "terminalName": "Install Package"
    },
    {
      "color": "purple",
      "command": "just run-view",
      "name": "$(browser) Web View",
      "shortcut": "v",
      "terminalName": "Web View"
    },
    {
      "color": "teal",
      "name": "$(tools) Utils",
      "shortcut": "u",
      "group": [
        {
          "command": "just deps",
          "name": "Deps",
          "shortcut": "d",
          "terminalName": "Deps"
        },
        {
          "command": "just lint",
          "name": "Lint",
          "shortcut": "l",
          "terminalName": "Lint"
        }
      ]
    },
    {
      "color": "tomato",
      "command": "just test",
      "name": "$(beaker) Test",
      "shortcut": "t",
      "terminalName": "Test"
    },
    {
      "color": "Orange",
      "command": "just release",
      "name": "$(rocket) Release",
      "terminalName": "Release",
      "useVsCodeApi": false
    },
    {
      "color": "blue",
      "command": "export IS_SANDBOX=1 && claude --dangerously-skip-permissions",
      "name": "$(hubot) Claude",
      "shortcut": "c",
      "terminalName": "Claude Yolo",
      "useVsCodeApi": false
    }
  ],
  "quickCommandButtons.refreshButton": {
    "icon": "$(refresh)",
    "color": "gray",
    "enabled": true
  },
  "quickCommandButtons.buttonSets": [],
  "quickCommandButtons.activeSet": null
}
